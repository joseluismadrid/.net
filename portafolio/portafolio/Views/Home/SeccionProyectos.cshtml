@model IEnumerable<Proyecto>
@if (Model is not null)
{
    <div class="text-center" style="padding-top: 6rem">
        <h1>Proyectos Desarrollados</h1>
        <p>En este espacio puedes Consultar algunos de mis trabajos mas relevantes</p>
    </div>
    <div class="container">
        <div class="row row-col-1 row-cols-md-3 g-4">
            @foreach (var proyecto in Model)
            {
                <div class="col">
                    <div class="card h-100">
                        <img src="@proyecto.ImagenURL" class="card-img-top" alt="Imagen del proyecto" />
                        <div class="card-body">
                            <h5 class="card-title">@proyecto.Titulo</h5>
                            <p class="card-text">@proyecto.Descripcion</p>

                        </div>
                        <div class="card-footer">
                            <a class="btn btn-primary" href="@proyecto.Link" target="_blank" rel="noopener noreferrer">Visitar</a>
                            <div>
                            </div>
                        </div>

                    </div>
                </div>
            }
        </div>
    </div>

};
